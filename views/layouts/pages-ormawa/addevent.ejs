                  <option>Lomba</option>
                  <option>Lainnya</option>
                </select>
              </div>
              <div class="form-group">
                <label for="imageEvent">Poster Event: </label>
                <input type="file" class="form-control-file" id="imageEvent" accept="image/*">
              </div>
