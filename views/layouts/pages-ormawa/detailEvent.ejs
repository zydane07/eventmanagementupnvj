<div class="wrapper">
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1><%= event.nama_event %> </h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Detail Event</li>
            </ol>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <!-- Default box -->
      <div class="card">
        <div class="card-header border-0">
          <h2 class="card-title">Data Pendaftar</h2>
          <div class="card-tools">
            <a href="#" class="btn btn-tool btn-sm">
              <i class="fas fa-download"></i>
            </a>
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
              <i class="fas fa-minus"></i>
            </button>
          </div>
        </div>
        <div class="card-body">
          <table id="example" class="table table-striped projects table-bordered display" style="width: 100%">
            <thead>
              <tr>
                <th>No</th>
                <th>Tanggal Daftar</th>
                <th>Nama</th>
                <th>NIM</th>
                <th>No. HP</th>
                <th>Fakultas</th>
                <th>Jurusan</th>
              </tr>
            </thead>
            <tbody>
              <% let i = 1 %>
              <% pendaftar.forEach(orang => { %>
                <tr>
                  <td><%= i %> </td>
                  <td>12-11-2021</td>
                  <td>
                    <a><%= orang.nama_lengkap %></a>
                    <br />
                    <!-- <small> Created 01.01.2019 </small> -->
                  </td>
                  <td><%= orang.nim %> </td>
                  <td><%= orang.no_hp %> </td>
                  <td><%= orang.fakultas %> </td>
                  <td><%= orang.prodi %> </td>
                </tr>
                <% i++ %> 
              <% }) %> 
            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Main Footer -->
  <footer class="main-footer">
    <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong>
    All rights reserved.
    <div class="float-right d-none d-sm-inline-block"><b>Version</b> 3.2.0-rc</div>
  </footer>
</div>
