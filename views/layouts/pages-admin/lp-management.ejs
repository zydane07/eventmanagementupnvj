<div class="wrapper">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Landing Page Management</h1>
                    </div>
                    <!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                            <li class="breadcrumb-item active">Landing Page</li>
                        </ol>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <form method="post" action="/lp-management?_method=PUT">
                                    <div class="form-group">
                                        <!-- <label for="inputName">Nama Event</label> -->
                                        <div class="profile-pic-div">
                                            <img src="/img/pict 1.png" id="photo" class="img-fluid mx-auto d-block" />
                                            <input type="file" id="file" />
                                            <label for="file" id="uploadBtn">Pilih Poto</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputName">Masukkan Judul</label>
                                        <input type="text" id="inputName" class="form-control form-control-lg" name="judul" value="<%= landing.judul %>" />
                                    </div>
                                    <div class="form-group">
                                        <label for="deskripsi_event">Deskripsi</label>
                                        <textarea id="inputDescription" class="form-control" rows="8" name="deskripsi_lp"><%= landing.deskripsi_lp %></textarea>
                                    </div>
                                    <div class="text-right">
                                        <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
                                        <a href="/event-admin" class="btn btn-secondary">Kembali</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- ./col -->
                </div>
            </div>
            <!-- /.container-fluid -->
        </div>

        <!--Modal Delete-->
        <div class="modal fade" id="deletemodal" role="dialog">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="model-header">
                        <div class="row">
                            <div class="col text-center" style="padding: 1rem">
                                <h5 class="modal-title" id="exampleModalLongTitle"><b>Apakah Anda ingin Menghapus Event Ini</b></h5>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kembali</button>
                    </div>
                </div>
            </div>
        </div>
        <!--Modal Konfirmasi-->
        <div class="modal fade" id="konfirmasimodal" role="dialog">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="model-header">
                        <div class="row">
                            <div class="col text-center" style="padding: 1rem">
                                <h5 class="modal-title" id="exampleModalLongTitle"><b>Apakah Anda ingin Mengkonfirmasi Event ini</b></h5>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary">Ya</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kembali</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->

    <!-- Main Footer -->
    <footer class="main-footer">
        <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong>
        All rights reserved.
        <div class="float-right d-none d-sm-inline-block"><b>Version</b> 3.2.0-rc</div>
    </footer>
</div>
