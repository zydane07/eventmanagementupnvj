<div class="container mb-5 pb-5" style="margin-top: 80px; margin-bottom: 10px">
    <div class="row">
        <div class="col mb-3">
            <p class="sub-font mb-1 mt-5"><%= judul %></p>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <% if (typeof events != 'undefined') { %> <% events.forEach(event =>{ %>
        <div class="col-lg-4 mt-4 mb-5">
            <div class="card-custom my-shadow-2" style="width: 23rem">
                <img src="/img/poster.png" alt="" class="img-event" />
                <div class="card-body-custom">
                    <p class="card-font h5 text-white mb-4"><%= event.nama_event %></p>
                    <div class="row pt-2 d-flex align-items-lg-baseline">
                        <div class="col">
                            <p class="date text-white"><%= event.tanggal_event.toISOString().substring(0, 10) %></p>
                        </div>
                        <div class="col-5 text-center">
                            <a href="/detail/<%= event.id_event %>" class="btn-custom-2">Lihat Detail</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }) %> <% } else { %>
        <div class="col-lg-12 mt-4" style="width: 100vh">
            <div class="bd-highlight align-items-center">
                <img src="/img/no event.png" class="img-noEvent" alt="Responsive image" />
                <p class="ctm-font-head pt-3">Kamu belum mendaftar ke event manapun</p>
            </div>
        </div>
        <% } %>
    </div>
</div>
